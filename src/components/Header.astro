---
import Logo from './Logo.astro'
import Nav from './Nav.astro'

const { current = '' } = Astro.props;
---

<style>
  header {
    flex: 1;
    position: relative;
    margin: 0 auto 10px auto;
    max-width: 1400px;
    padding: 1em 2em;
    box-sizing: border-box;
    width: 100%;
    display: flex;
    flex-direction: column;
  }

  /* Mobile styles (adjust max-width if needed) */
  @media screen and (max-width: 520px) {
  header {
    padding: 0 2em 0.5em 2em; /* top right bottom left */
   }
  } 

</style>

<header>
  <!-- <Logo /> -->
  <Nav current={current} />
</header>
