---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout
  title="Login"
  description="Login to Al Harkan's Blog"
  permalink={`${Astro.site}login`}
>
  <div class="container">
    <div class="min-h-[80vh] flex flex-col items-center justify-center">
      <div class="login-card">
        <h1 class="login-title">Welcome back</h1>
        <p class="login-subtitle">Sign in to access protected content</p>

        <form id="login-form" class="login-form">
          <div class="input-group">
            <label for="username" class="input-label">Email</label>
            <input
              type="email"
              id="username"
              name="username"
              placeholder="you@example.com"
              required
              class="login-input"
              autocomplete="email"
            />
            <label for="password" class="input-label">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              placeholder="••••••••"
              required
              class="login-input"
              autocomplete="current-password"
            />
          </div>

          <div id="error-container"></div>

          <button type="submit" class="login-button" id="submit-btn">
            <span class="btn-text">Sign in</span>
            <span class="btn-spinner">
              <svg class="spinner" width="20" height="20" viewBox="0 0 24 24">
                <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4" fill="none" opacity="0.25"/>
                <path d="M12 2A10 10 0 0 1 22 12" stroke="currentColor" stroke-width="4" fill="none">
                  <animateTransform attributeName="transform" type="rotate" from="0 12 12" to="360 12 12" dur="1s" repeatCount="indefinite"/>
                </path>
              </svg>
            </span>
          </button>
        </form>
      </div>
    </div>
  </div>
</BaseLayout>

<script>
  import { isAuthenticated, login } from "../lib/auth";

  // Check if user is already logged in on client side
  document.addEventListener("DOMContentLoaded", async () => {
    const authenticated = await isAuthenticated();
    if (authenticated) {
      window.location.href = "/uncategorized";
    }
  });

  // User-friendly error messages
  const errorMessages = {
    'auth/invalid-credential': 'Invalid email or password. Please try again.',
    'auth/invalid-email': 'Please enter a valid email address.',
    'auth/user-not-found': 'No account found with this email.',
    'auth/wrong-password': 'Incorrect password. Please try again.',
    'auth/email-already-in-use': 'An account with this email already exists.',
    'auth/weak-password': 'Password should be at least 6 characters.',
    'auth/too-many-requests': 'Too many failed attempts. Please try again later.',
    'auth/user-disabled': 'This account has been disabled.',
    'auth/operation-not-allowed': 'Email/password login is not enabled.',
    'auth/network-request-failed': 'Network error. Please check your connection.',
    'auth/internal-error': 'An internal error occurred. Please try again.',
    'auth/invalid-api-key': 'Server configuration error. Please contact support.',
    'auth/unauthenticated-domain': 'This domain is not authorized for login.',
  };

  const getErrorMessage = (error) => {
    if (error.code && errorMessages[error.code]) {
      return errorMessages[error.code];
    }
    if (error.message) {
      const message = error.message.toLowerCase();
      if (message.includes('network') || message.includes('fetch')) {
        return 'Network error. Please check your connection.';
      }
      if (message.includes('timeout')) {
        return 'Request timed out. Please try again.';
      }
    }
    return 'Something went wrong. Please try again.';
  };

  const showError = (message) => {
    const container = document.getElementById('error-container');
    if (!container) return;

    container.innerHTML = `<div class="error-message shake">${message}</div>`;

    // Remove shake animation after it plays
    setTimeout(() => {
      const errorEl = container.querySelector('.error-message');
      errorEl?.classList.remove('shake');
    }, 500);
  };

  const clearError = () => {
    const container = document.getElementById('error-container');
    if (container) container.innerHTML = '';
  };

  const setLoading = (loading) => {
    const btn = document.getElementById('submit-btn');
    const btnText = btn?.querySelector('.btn-text');
    const btnSpinner = btn?.querySelector('.btn-spinner');
    const emailInput = document.getElementById('username');
    const passwordInput = document.getElementById('password');

    if (btn && btnText && btnSpinner) {
      btn.disabled = loading;
      if (loading) {
        btnText.style.display = 'none';
        btnSpinner.style.display = 'inline';
        emailInput?.setAttribute('disabled', 'true');
        passwordInput?.setAttribute('disabled', 'true');
      } else {
        btnText.style.display = 'inline';
        btnSpinner.style.display = 'none';
        emailInput?.removeAttribute('disabled');
        passwordInput?.removeAttribute('disabled');
      }
    }
  };

  // Clear error when user starts typing
  document.getElementById('username')?.addEventListener('input', clearError);
  document.getElementById('password')?.addEventListener('input', clearError);

  // Handle login form submission
  const loginForm = document.getElementById("login-form");
  loginForm?.addEventListener("submit", async (e) => {
    e.preventDefault();
    clearError();

    const email = document.getElementById("username")?.value;
    const password = document.getElementById("password")?.value;

    // Basic validation
    if (!email || !password) {
      showError('Please fill in all fields.');
      return;
    }

    setLoading(true);

    try {
      const result = await login(email, password);

      if (!result.success) {
        throw result.error;
      }

      // Successful login - redirect will happen
      window.location.href = "/uncategorized";
    } catch (error) {
      console.error("Login error:", error);
      showError(getErrorMessage(error));

      // Shake animation on the form
      const card = document.querySelector('.login-card');
      card?.classList.add('shake');
      setTimeout(() => card?.classList.remove('shake'), 500);
    } finally {
      setLoading(false);
    }
  });
</script>

<style>
  /* Login card */
  .login-card {
    width: 100%;
    max-width: 420px;
    padding: 2.5rem;
    background: var(--background-alt);
    border-radius: 1rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  }

  .login-title {
    font-family: var(--font-family-sans);
    font-size: 2rem;
    font-weight: 700;
    text-align: center;
    margin-bottom: 0.5rem;
    color: var(--text-main);
  }

  .login-subtitle {
    text-align: center;
    color: var(--text-secondary);
    margin-bottom: 2rem;
    font-size: 0.95rem;
  }

  /* Error message */
  #error-container {
    width: 100%;
  }

  .error-message {
    padding: 0.6rem 0.8rem;
    margin-top: 1rem;
    margin-bottom: 0.5rem;
    background: rgba(239, 68, 68, 0.1);
    border: 1px solid rgba(239, 68, 68, 0.3);
    border-radius: 0.5rem;
    color: #ef4444;
    font-size: 0.85rem;
    text-align: center;
  }

  /* Shake animation */
  @keyframes shake {
    0%, 100% { transform: translateX(0); }
    20%, 60% { transform: translateX(-4px); }
    40%, 80% { transform: translateX(4px); }
  }

  .shake {
    animation: shake 0.4s ease-in-out;
  }

  /* Form */
  .login-form {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
  }

  .input-group {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .input-label {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--text-main);
    margin-left: 0.5rem;
  }

  .login-input {
    width: 100%;
    padding: 0.875rem 1rem;
    font-size: 1rem;
    border: 1px solid var(--text-secondary);
    border-radius: 0.75rem;
    outline: none;
    background: var(--background-body);
    color: var(--text-main);
    transition: border-color 0.2s ease, box-shadow 0.2s ease;
  }

  .login-input:focus {
    border-color: var(--primary-color);
    box-shadow: 0 0 0 3px rgba(13, 148, 136, 0.1);
  }

  .login-input:disabled {
    opacity: 0.6;
    cursor: not-allowed;
  }

  .login-input::placeholder {
    color: var(--text-secondary);
    opacity: 0.7;
  }

  /* Button */
  .login-button {
    position: relative;
    width: 100%;
    padding: 0.875rem 1rem;
    font-size: 1rem;
    font-weight: 600;
    background: var(--primary-color);
    color: white;
    border: none;
    border-radius: 0.75rem;
    cursor: pointer;
    transition: all 0.2s ease;
    margin-top: 0.5rem;
    font-family: var(--font-family-sans);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
  }

  .login-button:hover:not(:disabled) {
    opacity: 0.9;
    transform: translateY(-1px);
  }

  .login-button:active:not(:disabled) {
    transform: translateY(0);
  }

  .login-button:disabled {
    opacity: 0.7;
    cursor: not-allowed;
  }

  .btn-spinner {
    display: none;
  }

  .spinner {
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }
</style>
