---
import BaseLayout from "../layouts/BaseLayout.astro";
import ProtectedRoute from "../components/ProtectedRoute.astro";
---

<BaseLayout
  title="Protected Page - Al Harkan"
  description="A protected page that requires authentication"
  permalink={`${Astro.site}protected-example`}
>
  <ProtectedRoute />
  
  <div class="container py-12">
    <h1 class="text-4xl font-bold mb-6">Protected Content</h1>
    <p class="mb-4">This page is only visible to authenticated users.</p>
    
    <div class="bg-white p-6 rounded-lg shadow-md">
      <h2 class="text-2xl font-semibold mb-4">Your Secure Dashboard</h2>
      <p>Welcome to your protected area. This content is private and requires authentication to view.</p>
      
      <div class="mt-6">
        <a href="/logout" class="inline-block px-6 py-3 bg-red-600 text-white rounded hover:bg-red-700 transition">
          Logout
        </a>
      </div>
    </div>
  </div>
</BaseLayout> 