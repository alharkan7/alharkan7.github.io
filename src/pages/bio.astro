const description = "Al Harkan's Bio, Contact, and Intro";
const permalink = `${Astro?.site?.href}bio`;
---

<BaseLayout
  title={title}
  description={description}
  permalink={permalink}
  current="bio"
>
  <div class="container">
    <h1>Hi, I'm Al</h1>
    <div class="social-icons">
      <a
        href="mailto:alharkan7@gmail.com"
        target="_blank"
        rel="noopener noreferrer"
        aria-label="Email"
      >
        <Icon name="heroicons:envelope" />
      </a>
      <a
        href="https://t.me/alharkan"
        target="_blank"
        rel="noopener noreferrer"
        aria-label="Telegram"
      >
        <Icon name="simple-icons:telegram" />
      </a>
      <a
        href="https://x.com/alhrkn"
        target="_blank"
        rel="noopener noreferrer"
        aria-label="Twitter"
      >
        <Icon name="simple-icons:x" />
      </a>
      <a
        href="https://instagram.com/alhrkn"
        target="_blank"
        rel="noopener noreferrer"
        aria-label="Instagram"
